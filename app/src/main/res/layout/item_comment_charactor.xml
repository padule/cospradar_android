<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:padding="@dimen/padding" >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/icon_medium"
        android:layout_height="@dimen/icon_medium"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/container_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_icon"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/txt_name"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_small" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_latest_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_name"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toRightOf="@id/img_icon"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/apptheme_color"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/txt_charactor_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/label_accent"
            android:lines="1"
            android:padding="@dimen/padding_small"
            android:text="@string/profile_charactor_enabled"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_comment"
        android:layout_width="@dimen/text_small"
        android:layout_height="@dimen/text_small"
        android:layout_below="@id/container_txt_title"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/img_icon"
        android:src="@drawable/ic_comment" />

    <TextView
        android:id="@+id/txt_latest_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_txt_title"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_toRightOf="@id/img_comment"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_small" />

</RelativeLayout>