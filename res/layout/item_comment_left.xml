<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:paddingBottom="@dimen/padding_large"
    android:paddingLeft="@dimen/padding_small"
    android:paddingRight="@dimen/padding_small"
    android:paddingTop="@dimen/padding_small" >

    <ImageView
        android:id="@+id/img_charactor"
        android:layout_width="@dimen/icon_small"
        android:layout_height="@dimen/icon_small"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_no_user_rounded" />

    <TextView
        android:id="@+id/txt_charactor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/icon_small"
        android:layout_toRightOf="@id/img_charactor"
        android:ellipsize="end"
        android:lines="1"
        android:padding="@dimen/padding_small"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_small" />

    <ImageView
        android:id="@+id/img_triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_charactor_name"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/img_charactor"
        android:src="@drawable/ic_triangle_left" />

    <LinearLayout
        android:id="@+id/container_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_charactor_name"
        android:layout_marginRight="@dimen/icon_small"
        android:layout_toRightOf="@id/img_triangle"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_triangle"
            android:layout_weight="1"
            android:background="@drawable/bg_white_rounded"
            android:padding="@dimen/padding"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_toRightOf="@id/txt_comment"
            android:layout_weight="0"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_xsmall"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>