<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_black_alfa_dark" >

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/img_cover"
        android:layout_alignLeft="@id/img_cover"
        android:layout_alignRight="@id/img_cover"
        android:layout_alignTop="@id/img_cover"
        android:background="@color/bg_black_alfa_dark" />

    <ImageView
        android:id="@+id/img_charactor"
        android:layout_width="@dimen/icon_medium"
        android:layout_height="@dimen/icon_medium"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin" />

    <RelativeLayout
        android:id="@+id/container_charactor_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:layout_toRightOf="@id/img_charactor" >

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:text="@string/drawer_current_charactor"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small" />

        <TextView
            android:id="@+id/txt_charactor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_description"
            android:layout_marginBottom="@dimen/margin_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_charactor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_charactor_name"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_no_charactor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin"
        android:layout_toRightOf="@id/img_charactor"
        android:ellipsize="end"
        android:text="@string/drawer_no_charactor"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>