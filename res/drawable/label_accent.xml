<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_accent" />
            <corners android:radius="@dimen/radius_label" />
            <stroke android:color="@color/bg_white" android:width="1dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_white_alfa" />
            <corners android:radius="@dimen/radius_label" />
            <stroke android:color="@color/bg_white_alfa" android:width="1dp" />
        </shape>
    </item>

</selector>
