<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_white" />
            <corners android:radius="@dimen/radius_btn" />
            <stroke android:color="@color/bg_gray_dark" android:width="2dp" />
        </shape>
    </item>
    
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_white" />
                    <corners android:radius="@dimen/radius_btn" />
                    <stroke android:color="@color/bg_gray_dark" android:width="2dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/bg_black_alfa_light" />
                    <corners android:radius="@dimen/radius_btn" />
                    <stroke android:color="@color/bg_gray_dark" android:width="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_accent_disabled" />
            <corners android:radius="@dimen/radius_btn" />
            <stroke android:color="@color/bg_gray_dark" android:width="2dp" />
        </shape>
    </item>

</selector>